CREATE TABLE productos(
id NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY, --id: Entero, clave primaria y autoincrementable.
nombre VARCHAR(100) NOT NULL, -- nombre: Cadena de caracteres (VARCHAR(100)), no nulo.
descripcion CLOB, --  descripcion: Texto (TEXT), puede ser nulo.
precio NUMBER(8,2) NOT NULL CHECK (precio >= 0), --    precio: Número decimal (DECIMAL(8,2)), no nulo y debe ser mayor o igual a 0.
stock NUMBER NOT NULL DEFAULT (0), --stock: Entero, no nulo y con valor por defecto 0.
fecha_registro DATETIME DEFAULT SYSDATE, --fecha_registro: Fecha y hora (DATETIME), con valor por defecto la fecha y hora actual
descuento NUMBER CHECK(descuento >= 0 AND descuento <= 100),  --descuento: Número entero, que representa el porcentaje de descuento (entre 0 y 100).
estado VARCHAR(80) DEFAULT 'activo' CHECK(estado IN ('activo','inactivo')) --estado: Cadena de caracteres (ENUM) que solo puede tener los valores 'activo' o 'inactivo', con valor por defecto 'activo'.
);